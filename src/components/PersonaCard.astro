---
export interface Props {
  imgSrc: string;
  name: string;
  bio: string;
  quote: string;
}

const { imgSrc, name, bio, quote } = Astro.props;
---

<div class="bg-brand-navy/60 backdrop-blur-sm border border-brand-teal/20 rounded-lg p-6 hover:border-brand-magenta/40 transition-all duration-300 hover:scale-105">
  <div class="aspect-square mb-4 overflow-hidden rounded-lg">
    <img src={imgSrc} alt={name} class="w-full h-full object-cover" />
  </div>
  <h3 class="text-brand-teal font-bold text-lg mb-2">{name}</h3>
  <p class="text-gray-300 text-sm mb-3 leading-relaxed">{bio}</p>
  <blockquote class="text-brand-amber italic text-sm border-l-2 border-brand-magenta pl-3">
    "{quote}"
  </blockquote>
</div>